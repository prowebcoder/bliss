{% schema %}
{
  "name": "Highlight TextImages",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Highlight Text with Images"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph Text",
      "default": "<p>Add your text here with images.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Highlight TextImages",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="highlight-text-section">
  <h2>{{ section.settings.title }}</h2>
  <div class="highlight-text-content">
    {{ section.settings.paragraph }}
    <img src="{{ section.settings.image | img_url: 'medium' }}" alt="{{ section.settings.image.alt }}">
  </div>
</div>

<style>
  .highlight-text-section {
    padding: 20px;
    text-align: center;
  }

  .highlight-text-content {
    position: relative;
    display: inline-block;
  }

  .highlight-text-content p {
    display: inline;
    font-size: 24px;
    line-height: 1.6;
  }

  .highlight-text-content img {
    vertical-align: middle;
    margin: 0 10px;
  }

  .highlight-text-content .highlight {
    background-color: yellow;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const textElement = document.querySelector('.highlight-text-content p');
    const text = textElement.innerText;
    textElement.innerHTML = '';

    for (let i = 0; i < text.length; i++) {
      const span = document.createElement('span');
      span.innerText = text[i];
      textElement.appendChild(span);
    }

    const spans = document.querySelectorAll('.highlight-text-content p span');

    window.addEventListener('scroll', function() {
      const scrollPosition = window.scrollY;
      const elementPosition = textElement.getBoundingClientRect().top + window.scrollY;

      spans.forEach((span, index) => {
        if (scrollPosition > elementPosition + (index * 10)) {
          span.classList.add('highlight');
        } else {
          span.classList.remove('highlight');
        }
      });
    });
  });
</script>