<script src="{{ 'gsap.min.js' | asset_url }}"></script>
<script src="{{ 'ScrollTrigger.min.js' | asset_url }}"></script>

<div class="scroll-animation-section">
  <div class="heading-title">
    <p class="line-text">
      {% for block in section.blocks %}
        {% assign words = block.settings.text | split: ' ' %}
        {% for word in words %}
          <span class="word">{{ word }}</span>
        {% endfor %}
        {% if block.settings.show_image and block.settings.image %}
          <img src="{{ block.settings.image | img_url: 'small' }}" alt="Image" class="line-image" />
        {% endif %}
      {% endfor %}
    </p>
  </div>
</div>

<style>
  .scroll-animation-section {
    padding: 50px 20px;
    text-align: center;
  }

  .heading-title {
    display: inline-block;
  }

  .line-text {
    font-size: 2rem;
    color: rgba(182, 182, 182, 0.2);
    display: inline-flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px; /* Space between words and images */
  }

  .word {
    opacity: 0.3;
    transition: opacity 0.5s ease, color 0.5s ease;
  }

  .line-image {
    width: 30px;
    height: auto;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
</style>

<script>
  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', function () {
    const words = document.querySelectorAll('.word');
    const images = document.querySelectorAll('.line-image');

    // Animate words
    words.forEach((word, index) => {
      gsap.to(word, {
        opacity: 1,
        color: '#000', // Change to your desired highlight color
        scrollTrigger: {
          trigger: word,
          start: 'top 80%', // Adjust based on when you want the animation to start
          end: 'top 50%',   // Adjust based on when you want the animation to end
          scrub: true,
        },
      });
    });

    // Animate images
    images.forEach((image, index) => {
      gsap.to(image, {
        opacity: 1,
        scrollTrigger: {
          trigger: image,
          start: 'top 80%',
          end: 'top 50%',
          scrub: true,
        },
      });
    });
  });
</script>

{% schema %}
{
  "name": "Scroll Animation Text",
  "settings": [],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "label": "Text",
          "id": "text",
          "default": "Enter your text here"
        },
        {
          "type": "image_picker",
          "label": "Image (optional)",
          "id": "image",
          "info": "Add a small image between text"
        },
        {
          "type": "checkbox",
          "label": "Show Image",
          "id": "show_image",
          "default": true,
          "info": "Check this box to display the image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scroll Animation Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}