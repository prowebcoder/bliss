<script src="{{ 'gsap.min.js' | asset_url }}"></script>
<script src="{{ 'ScrollTrigger.min.js' | asset_url }}"></script>

<div class="section-container">
  <div class="left-column">
    <div class="heading-title">
      <p class="line-text">
        {% for block in section.blocks %}
          {{ block.settings.text }}
          {% if block.settings.show_image and block.settings.text != blank %}
            <img src="{{ block.settings.image | img_url: 'small' }}" alt="Image" class="line-image" />
          {% endif %}
        {% endfor %}
      </p>
    </div>
  </div>

  <div class="right-column">
    {% for block in section.blocks %}
      {% if block.settings.custom_image %}
        <div class="custom-image-container">
          <img src="{{ block.settings.custom_image | img_url: 'medium' }}" alt="Custom Image" class="custom-image" />
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .section-container {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    align-items: flex-start;
    flex-wrap: wrap;
  }

  .left-column, .right-column {
    flex: 1;
    min-width: 45%;
  }

  .heading-title {
    text-align: center;
  }

  .line-text {
    font-size: 2rem;
    color: rgba(182, 182, 182, 0.2);
    background: linear-gradient(to right, #b6b6b6, #b6b6b6) no-repeat;
    -webkit-background-clip: text;
    background-clip: text;
    background-size: 0%;
    transition: background-size cubic-bezier(0.1, 0.5, 0.5, 1) 0.5s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  .line-image {
    width: 30px; /* Set your preferred size for the image */
    height: auto;
    margin-left: 10px; /* Space between text and image */
  }

  .right-column {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: 20px;
  }

  .custom-image-container {
    text-align: center;
  }

  .custom-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
</style>

<script>
  gsap.registerPlugin(ScrollTrigger);

  const textLine = document.querySelector('.heading-title .line-text');

  gsap.to(textLine, {
    backgroundSize: '100%',
    ease: 'none',
    scrollTrigger: {
      trigger: textLine,
      start: 'top 40%',  // Trigger when 40% of the line is in view
      end: 'top 30%',    // End when 30% of the element is out of view
      scrub: true,
    },
  });
</script>

{% schema %}
{
  "name": "Scroll Animation Block",
  "settings": [],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "label": "Text",
          "id": "text",
          "default": "Enter your text here"
        },
        {
          "type": "image_picker",
          "label": "Image (optional)",
          "id": "image",
          "info": "Add a small image between text"
        },
        {
          "type": "checkbox",
          "label": "Show Image",
          "id": "show_image",
          "default": true,
          "info": "Check this box to display the image"
        },
        {
          "type": "image_picker",
          "label": "Custom Image (optional)",
          "id": "custom_image",
          "info": "Add a custom image for the right column"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scroll Animation Block",
      "category": "Custom"
    }
  ]
}
{% endschema %}
