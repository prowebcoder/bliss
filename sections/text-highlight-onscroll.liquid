<script src="{{ 'gsap.min.js' | asset_url }}"></script>
<script src="{{ 'ScrollTrigger.min.js' | asset_url }}"></script>

<div class="heading-title">
  {% for block in section.blocks %}
    <div class="line-block">
      <p class="line-text">
        {{ block.settings.text }}
        {% if block.settings.show_image and block.settings.text != blank %}
          <img src="{{ block.settings.image | img_url: 'small' }}" alt="Image" class="line-image" />
        {% endif %}
      </p>
    </div>
  {% endfor %}
</div>

<style>
  .heading-title {
    text-align: center;
  }

  .line-block {
    margin: 10px 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .line-text {
    font-size: 2rem;
    color: rgba(182, 182, 182, 0.2);
    background: linear-gradient(to right, #b6b6b6, #b6b6b6) no-repeat;
    -webkit-background-clip: text;
    background-clip: text;
    background-size: 0%;
    transition: background-size cubic-bezier(0.1, 0.5, 0.5, 1) 0.5s;
    display: inline-flex;
    align-items: center;
  }

  .line-image {
    width: 30px; /* Set your preferred size for the image */
    height: auto;
    margin-left: 10px; /* Space between text and image */
  }
</style>

<script>
  gsap.registerPlugin(ScrollTrigger);

  const textLines = gsap.utils.toArray('.heading-title .line-block .line-text');

  textLines.forEach((line) => {
    gsap.to(line, {
      backgroundSize: '100%',
      ease: 'none',
      scrollTrigger: {
        trigger: line,
        start: 'top 40%',  // Trigger when 40% of the line is in view
        end: 'top 30%',    // End when 30% of the element is out of view
        scrub: true,
      },
    });
  });
</script>

{% schema %}
{
  "name": "Scroll Animation Text",
  "settings": [],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "label": "Text",
          "id": "text",
          "default": "Enter your text here"
        },
        {
          "type": "image_picker",
          "label": "Image (optional)",
          "id": "image",
          "info": "Add a small image between text"
        },
        {
          "type": "checkbox",
          "label": "Show Image",
          "id": "show_image",
          "default": true,
          "info": "Check this box to display the image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scroll Animation Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
